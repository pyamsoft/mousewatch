readonly NAME="setup"

BIN_DIR="$(dirname "$(realpath "$0")")"
ROOT_DIR="$(realpath "${BIN_DIR}/..")"
unset BIN_DIR
readonly ROOT_DIR

_log() {
  _msg="$1"
  shift

  printf -- "[%s] ${_msg}\n" "${NAME}" "$@"

  unset _msg
  return 0
}

main() {
  if ! command -v corepack >/dev/null 2>&1; then
    _log 'You must install "corepack"'
    return 1
  fi

  cd "${ROOT_DIR}" || {
    _log 'Failed to move into project root: %s' "${ROOT_DIR}"
    return 1
  }

  _corepack_target="${ROOT_DIR}/lib"
  rm -rf "${_corepack_target}" || {
    printf -- 'Failed to prune corepack install directory: %s' "${_corepack_target}"
    return 1
  }

  mkdir -p "${_corepack_target}" || {
    printf -- 'Failed to prepare corepack install directory: %s' "${_corepack_target}"
    return 1
  }

  _log 'Installing pnpm with corepack...'
  corepack enable --install-directory "${_corepack_target}" || return 1
  return 0
}

main "$@" || exit 1
exit 0
