readonly NAME="setup"

BIN_DIR="$(dirname "$(realpath "$0")")"
ROOT_DIR="$(realpath "${BIN_DIR}/..")"
readonly BIN_DIR
readonly ROOT_DIR

_log() {
  _msg="$1"
  shift

  printf -- "[%s] ${_msg}\n" "${NAME}" "$@"

  unset _msg
  return 0
}

main() {
  if ! command -v corepack >/dev/null 2>&1; then
    _log 'You must install "corepack"'
    return 1
  fi

  cd "${ROOT_DIR}" || {
    _log 'Failed to move into project root: %s' "${ROOT_DIR}"
    return 1
  }

  _corepack_target="${ROOT_DIR}/lib"
  _pnpm="${_corepack_target}/pnpm"
  if [ ! -d "${_corepack_target}" ] || [ ! -x "${_pnpm}" ]; then
    _log 'Corepack install is missing. Running setup...'
    if [ -x "${BIN_DIR}/setup" ]; then
      "${BIN_DIR}/setup" || {
        _log 'Failed running local setup.'
        return 1
      }
    fi
  fi

  exec "${_pnpm}" "$@"
}

main "$@" || exit 1
exit 0
